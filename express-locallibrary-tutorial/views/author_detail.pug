extends layout

block content

  h1 Author: #{author.name}
  if author.date_of_birth && author.date_of_death != null
    p #{author.lifespan} 
    p Lifespan: #{author.life_duration.years} Years #{author.life_duration.months} Months and #{Math.round(author.life_duration.days)} Days
  else 
    p #{author.date_of_birth_formatted} - 
  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
